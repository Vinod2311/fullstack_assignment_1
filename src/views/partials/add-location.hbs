<div class="box">   
    <section class="section">
        <h1 class="title">Add Location</h1>
        <form action="/dashboard/addLocation" method="POST">
                <div class="field">
                    <label class="label">Name</label>
                    <input class="input" placeholder="Name" type="text" name="name">
                </div>
                <div class="field">
                    <label class="label">Latitude</label>
                    <input class="input" placeholder="Latitude" type="number" step="0.1" name="latitude" >
                </div>
                <div class="field">
                    <label class="label">Longitude</label>
                    <input class="input" placeholder="Longitude" type="number" step="0.1" name="longitude">
                </div>
                <div>
                    <label class="label">Description</label>
                    <textarea class="textarea" placeholder="Description" type="text" name="description"></textarea>
                </div>

            <button class="button is-link">Add Location</button>
        </form>
    </section>
</div>