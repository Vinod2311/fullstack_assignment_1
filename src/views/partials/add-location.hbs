<form class="ui segment form" action="/dashboard/addLocation" method="POST">
    <h2>Add location</h2>
    <div class="three fields">
        <div class="field">
            <label>Name</label>
            <input placeholder="Name" type="text" minlength="1" maxlength="10" name="name" required>
        </div>
        <div class="field">
            <label>Latitude</label>
            <input placeholder="Latitude" type="number" min="-90" max="90" step="0.01" name="lat" required>
        </div>
        <div class="field">
            <label>Longitude</label>
            <input placeholder="Longitude" type="number" min="-90" max="90" step="0.01" name="lng" required>
        </div>
    </div>
    <button class="ui blue submit button">Add Location</button>
</form>